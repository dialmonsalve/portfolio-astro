---
import { getI18N } from "../../../i18n";
import "../../../styles/components/modal.css";
import "../../../styles/pages/projects/images.css";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const selectFormat = ["jpeg", "png", "jpg", "webp"];
const selectQuantity = ["95", "30", "40", "50", "60", "70", "80", "90"];
---

<section class="section-images">
  <h1 transition:name="convert-images" class="h1-convert-images">
    {i18n.PROJECTS.INTERNAL_PROJECTS[1].TITLE}
  </h1>

  <article class="container-selects">
    <div>
      <label for="select-format">format</label>
      <select id="select-format" class="select">
        {selectFormat.map((sel) => <option value={sel}>{sel}</option>)}
      </select>
    </div>
    <div>
      <label for="select-quality">Quality</label>
      <select id="select-quality" class="select">
        {selectQuantity.map((sel) => <option value={sel}>{sel} %</option>)}
      </select>
    </div>
  </article>

  <article class="container-components" id="card-image">
    <div class="container-components__image" id="container-components">
      <div id="container-image" data-target="image" class="new-uploader">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="#8c68cd"
          class="bi bi-cloud-plus new-uploader__image"
          viewBox="0 0 16 16"
          data-sk-target="image"
        >
          <path
            fill-rule="evenodd"
            d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5"
          >
          </path>
          <path
            d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z"
          >
          </path>
        </svg><label for="image" class="label">Upload image</label><label
          id="input-image"
          class="new-uploader__input"
          data-sk-drawer="drawer-image"
          data-sk-target="image"
          data-required="true"></label>
      </div>
      <input
        id="image"
        type="file"
        class="uploader-image hidden-image"
        name="image"
      />
    </div>
  </article>
</section>
<script src="../../../typescript/transform-images/app.ts"></script>
